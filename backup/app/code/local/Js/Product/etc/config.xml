<?xml version="1.0"?>
<config>
    <modules>
        <Js_Product>
            <version>0.3.1</version>
        </Js_Product>
    </modules>
    <global>
        <blocks>
            <js_product>
                <class>Js_Product_Block</class>
            </js_product>
            <catalog>
                <rewrite>
                    <product_view>Js_Product_Block_Product_View</product_view>
                    <product_list_toolbar>Js_Product_Block_Product_List_Toolbar</product_list_toolbar>
                </rewrite>
            </catalog>
        </blocks>
        <helpers>
            <js_product>
                <class>Js_Product_Helper</class>
            </js_product>
        </helpers>
        <models>
            <js_product>
                <class>Js_Product_Model</class>
            </js_product>
            <catalog>
                <rewrite>
                    <product>Js_Product_Model_Product</product>
                </rewrite>
            </catalog>
            <amshopby>
                <rewrite>
                    <mysql4_decimal>Js_Product_Model_Resource_Layer_Filter_Decimal</mysql4_decimal>
                </rewrite>
            </amshopby>
        </models>
        <resources>
            <js_product_setup>
                <setup>
                    <module>Js_Product</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </js_product_setup>
        </resources>
        <events>
            <webforms_result_submit>
                <observers>
                    <submit_friend_form>
                        <type>singleton</type>
                        <class>Js_Product_Model_Observer</class>
                        <method>submitFriendForm</method>
                    </submit_friend_form>
                </observers>
            </webforms_result_submit>
        </events>
    </global>
</config>